							<s:Group width="100%"/>
							<s:Label text="@Resource(bundle='JBS', key='profile.qrisk.atrialFibrillation')" fontWeight="normal" alpha="{qriskAlpha}"/>
							<s:CheckBox id="atrialFibrillation" enabled="{qriskEnabled}"/>
						</s:HGroup>
						
						<s:HGroup width="100%" verticalAlign="bottom">
							<s:Group width="100%"/>
							<s:Label text="@Resource(bundle='JBS', key='profile.qrisk.rheumatoidArthritis')" fontWeight="normal" alpha="{qriskAlpha}"/>
							<s:CheckBox id="rheumatoidArthritis" enabled="{qriskEnabled}"/>
						</s:HGroup>
						
						<s:HGroup width="100%" verticalAlign="bottom">
							<s:Group width="100%"/>
							<s:Label text="@Resource(bundle='JBS', key='profile.qrisk.chronicRenalDisease')" fontWeight="normal" alpha="{qriskAlpha}"/>
							<s:CheckBox id="chronicRenalDisease" enabled="{qriskEnabled}"/>
						</s:HGroup>
						
						<s:HGroup width="100%" verticalAlign="middle"  toolTip="{tipPlaceHolder}">
							<s:Group width="100%"/>
							<!--
							<s:Label text="@Resource(bundle='JBS', key='profile.qrisk.postcode')" fontWeight="normal" alpha="{qriskAlpha}"/>
							<s:TextInput id="postcode" editable="true" text="" width="40" change="changed()" enabled="{qriskEnabled}"/>
							-->
