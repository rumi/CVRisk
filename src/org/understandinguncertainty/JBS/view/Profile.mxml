						<s:HGroup width="100%" verticalAlign="bottom">
							<s:Group width="100%"/>
							<s:Label text="@Resource(bundle='JBS', key='profile.qrisk.familyhistory')" fontWeight="normal" alpha="{qriskAlpha}"/>
