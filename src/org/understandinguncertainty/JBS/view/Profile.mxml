									<fx:String>@Resource(bundle='JBS', key='ethnicity.6')</fx:String>
									<fx:String>@Resource(bundle='JBS', key='ethnicity.7')</fx:String>
									<fx:String>@Resource(bundle='JBS', key='ethnicity.8')</fx:String>
									<fx:String>@Resource(bundle='JBS', key='ethnicity.9')</fx:String>
								</s:ArrayList>
